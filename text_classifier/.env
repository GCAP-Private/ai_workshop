# Local development environment configuration
DEPLOYMENT_ENV=local

# Model Configuration
MODEL_NAME=bert-base-uncased
NUM_CLASSES=8
MAX_LENGTH=512
DROPOUT=0.1
HIDDEN_SIZE=768

# Training Configuration
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=20
WARMUP_STEPS=500
WEIGHT_DECAY=0.01
MAX_GRAD_NORM=1.0
SEED=42
SAVE_DIR=./checkpoints
LOG_DIR=./logs
LOG_INTERVAL=100

# Distributed Training
AUTO_DISTRIBUTED=true
DIST_BACKEND=nccl
DIST_URL=env://
FIND_UNUSED_PARAMETERS=false
FORCE_SINGLE_GPU=false

# Data Configuration
TRAIN_FILE=./data/train_data.parquet
VAL_FILE=./data/val_data.parquet
TEST_FILE=./data/test_data.parquet
TEXT_COLUMN=text
LABEL_COLUMN=label
VAL_SPLIT=0.2