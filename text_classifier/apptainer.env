# HPC Apptainer environment configuration
DEPLOYMENT_ENV=sherlock

# Model Configuration
MODEL_NAME=bert-base-uncased
NUM_CLASSES=8
MAX_LENGTH=512
DROPOUT=0.1
HIDDEN_SIZE=768

# Training Configuration
BATCH_SIZE=64
LEARNING_RATE=2e-5
NUM_EPOCHS=5
WARMUP_STEPS=500
WEIGHT_DECAY=0.01
MAX_GRAD_NORM=1.0
SEED=42
SAVE_DIR=/oak/stanford/groups/maggiori/GCAP/data/scratch/xwfeng/text_classifier/checkpoints
LOG_DIR=/oak/stanford/groups/maggiori/GCAP/data/scratch/xwfeng/text_classifier/logs
LOG_INTERVAL=50

# Distributed Training
AUTO_DISTRIBUTED=true
DIST_BACKEND=nccl
DIST_URL=env://
FIND_UNUSED_PARAMETERS=false
FORCE_SINGLE_GPU=false

# Data Configuration
TRAIN_FILE=/oak/stanford/groups/maggiori/GCAP/data/scratch/xwfeng/text_classifier/data/train_data.parquet
VAL_FILE=/oak/stanford/groups/maggiori/GCAP/data/scratch/xwfeng/text_classifier/data/val_data.parquet
TEST_FILE=/oak/stanford/groups/maggiori/GCAP/data/scratch/xwfeng/text_classifier/data/val_data.parquet
TEXT_COLUMN=text
LABEL_COLUMN=label
VAL_SPLIT=0.2